<sql id="sql_userRole_item">
	user_id, role_id, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_userRole_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="userRole.userId != null">AND user_id = #{userRole.userId} </if>
		<if test="userRole.roleId != null">AND role_id = #{userRole.roleId} </if>
		<if test="userRole.createdBy != null">AND created_by like concat(#{userRole.createdBy}, '%') </if>
		<if test="userRole.updatedBy != null">AND updated_by like concat(#{userRole.updatedBy}, '%') </if>
	</trim>
</sql>
   
