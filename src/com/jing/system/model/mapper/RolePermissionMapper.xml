<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jing.system.model.dao.RolePermissionMapper">

<!-- Result Map-->
<resultMap id="RolePermissionResultMap" type="com.jing.system.model.entity.RolePermission">
	<id column="role_id" property="roleId"/>
	<result column="resource_id" property="resourceId"/>
	<result column="created_by" property="createdBy"/>
	<result column="created_date" property="createdDate"/>
	<result column="updated_by" property="updatedBy"/>
	<result column="updated_date" property="updatedDate"/>
</resultMap>

<sql id="sql_rolePermission_item">
	role_id, resource_id, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_rolePermission_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="rolePermission.roleId != null">AND role_id = #{rolePermission.roleId} </if>
		<if test="rolePermission.resourceId != null">AND resource_id = #{rolePermission.resourceId} </if>
		<if test="rolePermission.createdBy != null">AND created_by like concat(#{rolePermission.createdBy}, '%') </if>
		<if test="rolePermission.updatedBy != null">AND updated_by like concat(#{rolePermission.updatedBy}, '%') </if>
	</trim>
</sql>
   
<!-- 插入 角色权限 -->
<insert id="addRolePermission" parameterType="com.jing.system.model.entity.RolePermission" >
	<selectKey keyProperty="roleId" order="AFTER" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</selectKey>
 	INSERT INTO ts_role_permission 
	<trim prefix=" (" suffix=")" suffixOverrides=",">
		<if test="roleId != null"> role_id,</if>
		<if test="resourceId != null"> resource_id,</if>
		<if test="createdBy != null"> created_by,</if>
		<if test="createdDate != null"> created_date,</if>
		<if test="updatedBy != null"> updated_by,</if>
		<if test="updatedDate != null"> updated_date,</if>
	</trim>	 	
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="roleId != null"> #{roleId},</if>	
		<if test="resourceId != null"> #{resourceId},</if>	
		<if test="createdBy != null"> #{createdBy},</if>	
		<if test="createdDate != null"> #{createdDate},</if>	
		<if test="updatedBy != null"> #{updatedBy},</if>	
		<if test="updatedDate != null"> #{updatedDate},</if>	
	</trim>
</insert>

<!-- 根据标识，修改 角色权限 -->  
<update id="modifyRolePermission" parameterType="com.jing.system.model.entity.RolePermission" >
  	UPDATE ts_role_permission SET
	<trim suffixOverrides=",">
		<if test="resourceId != null"> resource_id = #{resourceId},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="createdDate != null"> created_date = #{createdDate},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		<if test="updatedDate != null"> updated_date = #{updatedDate},</if>
	</trim>
	WHERE role_id = #{roleId}
</update>
 
<!-- 删除 角色权限 -->
<delete id="dropRolePermissionByRoleId" parameterType="java.lang.Integer">
	DELETE FROM ts_role_permission WHERE role_id = #{roleId}
</delete> 

<!-- 根据标识查询 角色权限 -->
<select id="queryRolePermissionByRoleId"  resultMap="RolePermissionResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_rolePermission_item"/>
	FROM ts_role_permission WHERE role_id = #{roleId}
</select>

<!-- 根据属性查询角色权限 -->
<select id="queryRolePermissionByProperty"  resultMap="RolePermissionResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_rolePermission_item"/>
	FROM ts_role_permission 
	<where>
		<include refid="sql_rolePermission_query_nowhere"/>
	</where>
</select>

<!-- 根据角色权限属性与分页信息分页查询角色权限信息 -->
<select id="queryRolePermissionForPage"  resultMap="RolePermissionResultMap" > 
	SELECT 
	<include refid="sql_rolePermission_item"/>
	FROM ts_role_permission 
	<where>
		<include refid="sql_rolePermission_query_nowhere"/>
	</where>
</select>

</mapper>   
