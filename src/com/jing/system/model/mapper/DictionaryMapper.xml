<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jing.system.model.dao.DictionaryMapper">

<!-- Result Map-->
<resultMap id="DictionaryResultMap" type="com.jing.system.model.entity.Dictionary">
	<id column="id" property="id"/>
	<result column="code" property="code"/>
	<result column="value" property="value"/>
	<result column="group_code" property="groupCode"/>
	<result column="parent_code" property="parentCode"/>
	<result column="sequence" property="sequence"/>
	<result column="flag" property="flag"/>
	<result column="created_by" property="createdBy"/>
	<result column="created_date" property="createdDate"/>
	<result column="updated_by" property="updatedBy"/>
	<result column="updated_date" property="updatedDate"/>
</resultMap>

<sql id="sql_dictionary_item">
	id, code, value, group_code, parent_code, sequence, flag, created_by, created_date, updated_by, updated_date
</sql>
       
<!-- 查询条件 无WHERE -->
<sql id="sql_dictionary_query_nowhere">
	<trim prefix=" " prefixOverrides="AND|OR">
		<if test="dictionary.id != null">AND id = #{dictionary.id} </if>
		<if test="dictionary.code != null">AND code like concat(#{dictionary.code}, '%') </if>
		<if test="dictionary.value != null">AND value like concat(#{dictionary.value}, '%') </if>
		<if test="dictionary.groupCode != null">AND group_code like concat(#{dictionary.groupCode}, '%') </if>
		<if test="dictionary.parentCode != null">AND parent_code like concat(#{dictionary.parentCode}, '%') </if>
		<if test="dictionary.sequence != null">AND sequence = #{dictionary.sequence} </if>
		<if test="dictionary.flag != null">AND flag = #{dictionary.flag} </if>
		<if test="dictionary.createdBy != null">AND created_by like concat(#{dictionary.createdBy}, '%') </if>
		<if test="dictionary.updatedBy != null">AND updated_by like concat(#{dictionary.updatedBy}, '%') </if>
	</trim>
</sql>
   
<!-- 插入 字典值 -->
<insert id="addDictionary" parameterType="com.jing.system.model.entity.Dictionary" >
	<selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
		SELECT LAST_INSERT_ID()
	</selectKey>
 	INSERT INTO ts_dictionary 
	<trim prefix=" (" suffix=")" suffixOverrides=",">
		<if test="id != null"> id,</if>
		<if test="code != null"> code,</if>
		<if test="value != null"> value,</if>
		<if test="groupCode != null"> group_code,</if>
		<if test="parentCode != null"> parent_code,</if>
		<if test="sequence != null"> sequence,</if>
		<if test="flag != null"> flag,</if>
		<if test="createdBy != null"> created_by,</if>
		<if test="createdDate != null"> created_date,</if>
		<if test="updatedBy != null"> updated_by,</if>
		<if test="updatedDate != null"> updated_date,</if>
	</trim>	 	
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="id != null"> #{id},</if>	
		<if test="code != null"> #{code},</if>	
		<if test="value != null"> #{value},</if>	
		<if test="groupCode != null"> #{groupCode},</if>	
		<if test="parentCode != null"> #{parentCode},</if>	
		<if test="sequence != null"> #{sequence},</if>	
		<if test="flag != null"> #{flag},</if>	
		<if test="createdBy != null"> #{createdBy},</if>	
		<if test="createdDate != null"> #{createdDate},</if>	
		<if test="updatedBy != null"> #{updatedBy},</if>	
		<if test="updatedDate != null"> #{updatedDate},</if>	
	</trim>
</insert>

<!-- 根据标识，修改 字典值 -->  
<update id="modifyDictionary" parameterType="com.jing.system.model.entity.Dictionary" >
  	UPDATE ts_dictionary SET
	<trim suffixOverrides=",">
		<if test="code != null"> code = #{code},</if>
		<if test="value != null"> value = #{value},</if>
		<if test="groupCode != null"> group_code = #{groupCode},</if>
		<if test="parentCode != null"> parent_code = #{parentCode},</if>
		<if test="sequence != null"> sequence = #{sequence},</if>
		<if test="flag != null"> flag = #{flag},</if>
		<if test="createdBy != null"> created_by = #{createdBy},</if>
		<if test="createdDate != null"> created_date = #{createdDate},</if>
		<if test="updatedBy != null"> updated_by = #{updatedBy},</if>
		<if test="updatedDate != null"> updated_date = #{updatedDate},</if>
	</trim>
	WHERE id = #{id}
</update>
 
<!-- 删除 字典值 -->
<delete id="dropDictionaryById" parameterType="java.lang.Integer">
	DELETE FROM ts_dictionary WHERE id = #{id}
</delete> 

<!-- 根据标识查询 字典值 -->
<select id="queryDictionaryById"  resultMap="DictionaryResultMap" parameterType="java.lang.Integer">
	SELECT 
	<include refid="sql_dictionary_item"/>
	FROM ts_dictionary WHERE id = #{id}
</select>

<!-- 根据属性查询字典值 -->
<select id="queryDictionaryByProperty"  resultMap="DictionaryResultMap" parameterType="java.util.Map">
	SELECT 
	<include refid="sql_dictionary_item"/>
	FROM ts_dictionary 
	<where>
		<include refid="sql_dictionary_query_nowhere"/>
	</where>
</select>

<!-- 根据字典值属性与分页信息分页查询字典值信息 -->
<select id="queryDictionaryForPage"  resultMap="DictionaryResultMap" > 
	SELECT 
	<include refid="sql_dictionary_item"/>
	FROM ts_dictionary 
	<where>
		<include refid="sql_dictionary_query_nowhere"/>
	</where>
</select>

</mapper>   
